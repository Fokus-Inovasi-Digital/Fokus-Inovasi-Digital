<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # -------------------------------------------------------------
    # BAGIAN 1: KEAMANAN (TUGAS "SATPAM" BARU)
    # -------------------------------------------------------------
    
    # Blokir akses langsung ke URL /public/
    RewriteCond %{ENV:REDIRECT_STATUS} ^$
    RewriteCond %{REQUEST_URI} ^/public/
    RewriteRule ^ - [L,R=404]

    # Blokir akses ke file dan folder sensitif di root
    # Ini adalah bagian keamanan terpenting!
    RewriteRule ^(\.env|artisan|composer\.json|composer\.lock|package\.json|webpack\.mix\.js) - [F,L,NC]
    RewriteRule ^(app|config|database|resources|routes|storage|tests|vendor)/ - [F,L,NC]

    # -------------------------------------------------------------
    # BAGIAN 2: LOGIKA LARAVEL (TUGAS "RESEPSIONIS")
    # -------------------------------------------------------------

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # -------------------------------------------------------------
    # BAGIAN 3: FRONT CONTROLLER (INTI LARAVEL)
    # -------------------------------------------------------------

    # A. Layani aset (CSS/JS/Gambar) jika ada di folder /public
    RewriteCond %{DOCUMENT_ROOT}/public%{REQUEST_URI} -f
    RewriteRule ^(.*?)$ public/$1 [L,QSA]

    # B. Kirim semua permintaan lain ke index.php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^(.*)$ public/index.php [L,QSA]

</IfModule>